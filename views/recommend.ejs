<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/css/recommend.css" />
    <title>Recommend</title>
  </head>
  <body>
    <header>
      <div class="logo">
        <p class="logo-title">MOVIE RECOMMENDER</p>
      </div>
      <div class="menu">
        <ul class="menu-list">
          <li class="menu-item">
            <a class="menu-item-link" href="/home">HOME</a>
          </li>
          <li class="menu-item">
            <a class="menu-item-link" href="/register">REGISTER</a>
          </li>
          <li class="menu-item">
            <a class="menu-item-link" href="/login">LOGIN</a>
          </li>
          <li class="menu-item">
            <a class="menu-item-link" href="/movies">MOVIES</a>
          </li>
          <li class="menu-item">
            <a class="menu-item-link" href="/recommend">RECOMMEND</a>
          </li>
          <li class="menu-item logout-button">
            <a class="menu-item-link" href="/logout">Logout</a>
          </li>
        </ul>
      </div>
      <div class="clearFix"></div>
    </header>

    <div class="card">
      <%if(typeof alert !='undefined'){%>
      <p class="alert-success"><%=alert%></p>
      <%}%>
      <h1 class="heading">Recommend Movies To Others</h1>

      <form
        class="form"
        action="/recommend"
        method="post"
        enctype="multipart/form-data"
      >
        <input
          type="text"
          name="sMovieName"
          placeholder="MOVIE NAME"
          required
        />
        <!-- <input type="text" name="sGenre" placeholder="GENRE" required /> -->
        <select name="sGenre" id="sGenre">
          <option value="all" selected>All</option>

          <option value="sci-fi">Sci-Fi</option>
          <option value="superhero">Superhero</option>
          <option value="comedy">Comedy</option>
          <option value="action">Action</option>
        </select>
        <textarea
          type="text"
          name="sDescription"
          placeholder="DESCRIPTION"
          required
        ></textarea>
        <label for="sImage" class="image-upload"
          >Upload Movie Image <input type="file" name="sImage" id="sImage"
        /></label>

        <input type="submit" value="Add Movie" class="add-button" />
      </form>
    </div>
  </body>
</html>
